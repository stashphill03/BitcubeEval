

<form method="POST" id="add_student">
    <div class="new_student">
         <div class="form-group">
             <label for="name" class="text-dark">Degree Name</label>
             <input type="hidden" name="id" value="">
             <input type="text" name="name" placeholder="degree">
         </div>
         <div class="form-group">
             <label for="Email" class="text-dark">Degree Duration in Years</label>
             <input type="text" name="email" placeholder="Years">
         </div>
         <div class="form-group">
             <label for="DOB" class="text-dark">Students Enrolled</label>
             <input type="text" name="DOB" placeholder="amount">
         </div>
    
         <div class="form-group">
             <button type="submit" class="btn text-light update">Save</button>
         </div>
    </div>
 </form>